<% content_for :body_content_title do %>
  <%= @ad.link %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Link</h1>
    <p>
      <%=raw @ad.link %>
    </p>
  </section>
  <section>
    <h1>Image</h1>
    <p>
      <%= image_fu @ad.image, nil %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="ads">
      <% @ads.each do |ad| %>
        <li>
          <%= link_to ad.link, ad_path(ad) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
