<!DOCTYPE html>
<html>
  <%= render "shared/head" %>
  <body>
    <!-- SITE BAR -->
    <%= render(:partial => "/shared/site_bar", :locals => {:head => true}) if Rails.env=="test"-%>
    <div id="art-page-background-simple-gradient">
    </div>
    <div id="art-main">
      <div class="art-Sheet">
        <div class="art-Sheet-tl"></div>
        <div class="art-Sheet-tr"></div>
        <div class="art-Sheet-bl"></div>
        <div class="art-Sheet-br"></div>
        <div class="art-Sheet-tc"></div>
        <div class="art-Sheet-bc"></div>
        <div class="art-Sheet-cl"></div>
        <div class="art-Sheet-cr"></div>
        <div class="art-Sheet-cc"></div>
        <div class="art-Sheet-body">
          <div class="art-Header">
            <div id="art-page-background-glare">
              <div id="art-page-background-glare-image"></div>
            </div>
            <div class="art-Header-jpeg"></div>
            <div class="art-Logo">
							<a href="/">
              <h1 id="name-text" class="art-Logo-name"></h1>
              <div id="slogan-text" class="art-Logo-text"><%=RefinerySetting.find_or_set(:company_name, '睿才人力资源服务有限公司')%></div>
              </a>
            </div>
            <div style='margin:auto;width:400px;'><img src='/images/cf.png'/></div>
          </div>
          <div class="art-nav">
          	<div class="l"></div>
          	<div class="r"></div>
            <%=render :partial=>"shared/menu"%>
          </div>
          <div class="art-contentLayout">
            <div class='art-sidebar-left'>
              <%=yield :left%>
            </div>
            <div class='art-content'>
              <%=yield :content%>
            </div>
          </div>
          <div class="cleared"></div>
          <div class="art-Footer">
            <div class="art-Footer-inner">
              <div class="art-Footer-text">
                <p><%= RefinerySetting.find_or_set(:copy_right, '') %></p>
              </div>
            </div>
            <div class="art-Footer-background"></div>
          </div>
          <div class="cleared"></div>


        </div>
      </div>
    </div>
    
    <%= render :partial => "shared/slideshow_script"%>
    <script type="text/javascript">

      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-9780563-2']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

    </script>
    <lock name="comparo"></lock>
  </body>
</html>

